<%- layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="row">
    <div class="col col-8 offset-2">
      <br /><br />
      <h3>SignUP on WanderLust</h3>
      <form method="post" action="/signup" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            placeholder="Add a username"
            name="username"
            id="username"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">username should be valid</div>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            placeholder="Add your email"
            name="email"
            id="email"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            placeholder="Add a strong password"
            name="password"
            id="password"
            class="form-control"
            required
          />
        </div>
        <button class="btn btn-danger add-btn mb-3">SignUP</button>
      </form>
    </div>
  </div>
</body>
