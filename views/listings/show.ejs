<!DOCTYPE html>
<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col col-8 offset-3">
      <h3><%= listing.title %></h3>
    </div>
    <div class="card col-6 offset-3 show-card listing-card">
      <div class="show-card-img">
        <img
          src="<%= listing.image %>"
          class="card-img-top show-img"
          alt="listing_image"
        />
      </div>
      <div class="card-body">
        <p class="card-text">
          <%= listing.description %> <br />
          &#8377; <%= listing.price.toLocaleString("en-In") %> <br />
          <%= listing.location %> <br />
          <%= listing.country %>
        </p>
        <div class="btns row">
          <div class="col">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark"
              >Edit</a
            >
          </div>
          <div class="col">
            <form
              method="POST"
              action="/listings/<%= listing._id %>?_method=DELETE"
            >
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <hr />
    <div class="col col-8 offset-3 mb-3">
      <h4>Leave a review</h4>
      <form
        action="/listings/<%= listing._id %>/reviews"
        method="POST"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <input
            type="range"
            min="1"
            max="5"
            id="rating"
            name="review[rating]"
            class="form-range"
          />
        </div>
        <div class="mb-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            name="review[comment]"
            id="comment"
            cols="30"
            rows="5"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">
            Please add some comments for review
          </div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
      <hr />
      <h5>Reviews</h5>
      <div class="row">
        <% for(review of listing.reviews){%>
        <div class="card col-5 mb-3 ms-3">
          <div class="card-body">
            <h5 class="card-title">Jan Doe</h5>
            <div class="star-rating">
              <% for (let i = 1; i <= 5; i++) { %> <% if (i <= review.rating)
              {%>
              <span class="star-filled">&#9733;</span>
              <% } else { %>
              <span class="star-empty">&#9733;</span>
              <% } %> <% } %>
            </div>
            <p class="card-text"><%= review.comment %></p>
            <form
              action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
              method="POST"
            >
              <button class="btn btn-dark btn-sm mb-3">Delete</button>
            </form>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</body>
